{
    let a = 5;
}
console.log(a);

// output:- ReferenceError: a is not defined



{
    const a = 5;
}

console.log(a);

//output:- ReferenceError: a is not defined




{
    var a = 5;
}
console.log(a);

//output:- 5



if(true){
    let a = 5;
}
console.log(a);


//output:- ReferenceError: a is not defined




if(true){
    const a = 5;
}
console.log(a);


//output:- ReferenceError: a is not defined





if(true){
    var a = 5;
}
console.log(a);


//output:- 5





for(let i=0;i<10;i++){

}
console.log(i);


//output:-  ReferenceError: i is not defined




for(const i=0;i<10;i++){

}
console.log(i);


//output:-  TypeError: Assignment to constant variable.





for(var i=0;i<10;i++){

}
console.log(i);


//output:-  10

{
    let a = 5;
}
console.log(a);

// output:- ReferenceError: a is not defined



{
    const a = 5;
}

console.log(a);

//output:- ReferenceError: a is not defined




{
    var a = 5;
}
console.log(a);

//output:- 5



if(true){
    let a = 5;
}
console.log(a);


//output:- ReferenceError: a is not defined




if(true){
    const a = 5;
}
console.log(a);


//output:- ReferenceError: a is not defined





if(true){
    var a = 5;
}
console.log(a);


//output:- 5





